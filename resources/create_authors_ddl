DROP TABLE `tbl_authors` IF EXISTS;

CREATE TABLE `tbl_authors` (
  `PERS_ID` int(11) UNSIGNED NOT NULL COMMENT 'Identificator unic al unui autor de carte',
  `BIRTH_YEAR` int(5) NOT NULL DEFAULT '1900' COMMENT 'Anul nasterii autorului',
  `AUTH_NAME` varchar(64) COLLATE utf8_unicode_ci NOT NULL DEFAULT 'John Doe' COMMENT 'Numele de publicare al unui autor de carte',
  `AUTH_BIO` text COLLATE utf8_unicode_ci NOT NULL COMMENT 'scurta prezentare a unui autor de carte'
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci COMMENT='lista autorilor de literatura';

