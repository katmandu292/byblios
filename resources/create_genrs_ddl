DROP TABLE `tbl_genres` IF EXISTS;

--
-- Table structure for table `tbl_genres`
--

CREATE TABLE `tbl_genres` (
  `GENRE_ID` int(11) NOT NULL COMMENT 'identificator unic al unui gen de roman',
  `GENRE_LABEL` varchar(32) COLLATE utf8_unicode_ci NOT NULL COMMENT 'denumirea consacrata a subgenului romanului literar',
  `GENRE_DESCR` text COLLATE utf8_unicode_ci COMMENT 'descriere scurta a unui subgen al romanului literar'
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_unicode_ci COMMENT='lista scurta a subgenurilor romanului literar';

